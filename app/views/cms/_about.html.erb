<div class="cmsWrapper">
	<div class="releases">
		<div class="divHeader">Books</div>
		<div class="tableWrapper">
			<div class="tableContent">
				<% if @abouts.count > 0 %>
					<table width="100%">
						<tr class="tableHeader">
							<th>ABOUT TEXT</th>
							<th>SYNOPSIS</th>
						</tr>
						<tr><hr class="ruler"/></tr>
						<% @abouts.each do |a| %>
							<tr class="tableRow">
								<td width="78%"><%= truncate(a.text, :length => 82) %></td>
								<td width="20%"><%= truncate(a.getintouchtext, :length => 22) %></td>
								<td width="2%" class="topperButtons"><%= link_to "E", edit_about_path(a), :title => "Edit about text",:class => "btn btn2 tips" %></td>
							</tr>
						<% end %>
					</table>
				<% else %>
					<table width="100%">
						<tr class="tableRow empty">
							<td>
								<em>YOU HAVE NO ABOUT TEXT YET... ADD SOME BELOW ?!</em>
							</td>
						</tr>
					</table>
				<% end %>
			</div>
		</div>
	</div>
	<h6>
	<input type="hidden" value="works" class="modal-model-type">
	<% if @abouts.count == 0 %>
		<h6><%= link_to 'Add about text', new_about_path, :class => "darkButton2" %></h6>
    <% end %>
</div>