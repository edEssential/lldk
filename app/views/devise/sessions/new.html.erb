<div id="divider2">&#160;</div>
<div class="col-md-12">
	<div class="col-md-6 col-sm-offset-3 background">

	<h1 class="formHeader">Sign in</h1>
	<hr class="projectSeparator" />

	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>

	  	<div><%= f.label :email, :class => "formLabel" %><br />
	  	<%= f.email_field :email, autofocus: true, :class => "formField" %></div>

	  	<div><%= f.label :password, :class => "formLabel" %><br />
	    <%= f.password_field :password, autocomplete: "off", :class => "formField" %></div>

	  	<% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		<% end -%>

	  	<div><%= f.submit "Sign in", :class => "btn" %></div>
	<% end %>
	
</div>
